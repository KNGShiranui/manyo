<h2>管理者画面</h2>
<p style="color: #a4a8d4"><%= notice %></p>

<h3>ユーザ一覧</h3>

<table class="table">
<tr>
    <th><%= 'ユーザ名' %></th>
    <th><%= '合計タスク数' %></th>
    <th><%= '管理者権限' %></th>
  </tr>
<% @users.each do |user| %>
  <tr class="task_row">
    <td><%= user.name %>&emsp;</td>
    <td><%= user.tasks.count %>&emsp;</td>
    <td><%= user.administrator %></td>
    <td><%= link_to t('view.detail'), administrator_user_path(user.id) %></td>
    <td><%= link_to t('view.edit'), edit_administrator_user_path(user.id) %></td>
    <td><%= link_to t('view.delete'), administrator_user_path(user.id), method: :delete, data: { confirm: t('view.confirm.delete') } %></td>
  </tr>
<% end %>
</table>
<button type="button" class="btn btn-outline-info">
<%= link_to '管理者ユーザ作成', new_administrator_user_path %>
</button>