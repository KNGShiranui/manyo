<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> タスクの保存に失敗しました:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タスク名 %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :タスク内容 %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :タスク期日 %>
    <%= form.date_field :due_date %>
  </div>
  
  <div class="field">
    <%= form.label :タスクステータス %>
    <%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "タスク一覧", tasks_path %>

