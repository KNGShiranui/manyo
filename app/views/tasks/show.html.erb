<p id="notice"><%= notice %></p>

<p>
  <strong>タスク名:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>タスク内容:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>タスク期日:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status %>
</p>

<%= link_to '編集', edit_task_path(@task) %> |
<%= link_to '削除', task_path(@task), method: :delete, data: { confirm: '本当に削除してよいですか' } %> |
<%= link_to '戻る', tasks_path %> |
