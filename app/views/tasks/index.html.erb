<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<table>
  <tr>
    <h2><th><div class="col"><%= link_to 'タスク作成', new_task_path %></div></th></h2>
    <h2><th><div class="col"><%= link_to '作成日時でソート', tasks_path(sort_created_at: "true") %></div></th></h2>
    <h2><th><div class="col"><%= link_to '終了期限でソート', tasks_path(sort_due_date: "true") %></div></th></h2>
    <th colspan="3"></th>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <h2><th><div class="col">タスク名</div></th></h2>
      <h2><th><div class="col">タスク内容</div></th></h2>
      <h2><th><div class="col">タスク期日</div></th></h2>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">  
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to '詳細', task_path(task) %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除してよいですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>